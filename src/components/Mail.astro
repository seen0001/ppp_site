---
import "../styles/style.css";
const { overskrift, text, link } = Astro.props;
---

<article>
  <div class="tekst"><p>{text}</p></div>
  <div class="info-buttons">
    <div class="mail">
      <a class="footer-info" href="mailto:sebastian.engelbreth@outlook.dk">sebastian.engelbreth@outlook.dk</a>
    </div>
    <div class="mobil">
      <a class="footer-info" href="tel:+4528889648">+45 28 88 96 48</a>
    </div>
  </div>
</article>

<style>
  .info-buttons {
    display: flex;
    gap: 20px;
    margin-top: 40px;
    margin-bottom: 40px;
  }
  .footer-info {
    padding: 24px 72px;
    border: 1px solid var(--color_text);
    border-radius: 2.5rem;
  }
  article {
    padding-bottom: 40px;
    display: flex;
    flex-direction: column;
    text-align: center;
    gap: 20px;
  }

  .overskrift p {
    font-size: var(--font_size_large);
    font-weight: bold;
  }
  .tekst p {
    padding-bottom: 8px;
    font-size: var(--font_size_regular);
  }
  .mail p {
    padding-right: 8px;
    font-size: var(--font_size_regular);
  }

  .mail a {
    font-size: var(--font_size_regular);
  }
  .mail a:hover {
    color: var(--color_blue);
  }
  @media screen and (min-width: 1024px) {
    article {
      text-align: start;
    }
  }
</style>
