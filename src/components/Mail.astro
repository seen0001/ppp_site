---
import "../styles/style.css";
const { overskrift, text, link } = Astro.props;
---

<article>
  <div class="tekst"><p>{text}</p></div>

  <div class="mail">
    <a href="mailto:sebastian.engelbreth@outlook.dk">sebastian.engelbreth@outlook.dk</a>
  </div>
  <div class="mobil">
    <a href="tel:+4528889648">+4528889648</a>
  </div>
</article>

<style>
  article {
    padding-bottom: 40px;
    display: flex;
    flex-direction: column;
    text-align: center;
  }

  .overskrift p {
    font-size: var(--font_size_large);
    font-weight: bold;
  }
  .tekst p {
    padding-bottom: 8px;
    font-size: var(--font_size_regular);
  }
  .mail p {
    padding-right: 8px;
    font-size: var(--font_size_regular);
  }

  .mail a {
    text-decoration: underline 1px;
    font-size: var(--font_size_regular);
  }
  .mail a:hover {
    color: var(--color_blue);
  }
  @media screen and (min-width: 1024px) {
    article {
      text-align: start;
    }
  }
</style>
